{
  "compilerOptions": {
    /* Language and environment */
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    /* Module resolution */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    /* Strictness & safety */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    /* React & JSX */
    "jsx": "preserve",
    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* ðŸ”‘ Path alias (THIS FIXES YOUR ERROR) */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* Next.js plugin */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "incremental": true
  },
  /* Files Next.js needs */
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
